{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@asi-ngtools/lib": [
        "./dist/asi-ngtools"
      ],
      "@asi-ngtools/lib/*": [
        "./dist/asi-ngtools/*"
      ],
      "@common/*": [
        "./src/app/common/*"
      ],
      "@config/*": [
        "./src/app/common/config/*"
      ],
      "@utils/*": [
        "./src/app/common/utils/*"
      ]
    }
  }
}
